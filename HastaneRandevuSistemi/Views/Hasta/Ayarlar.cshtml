@model HastaneRandevuSistemi.Models.SifreDegisModel

@{
    ViewData["Title"] = "Ayarlar";
    Kullanici? hasta = TempData["kullanici"] as Kullanici;
}

<h2>Ayarlar</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Ayarlar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="YeniSifre" class="control-label">Yeni Şifre</label>
                <input asp-for="YeniSifre" class="form-control" />
                <span asp-validation-for="YeniSifre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EskiSifre" class="control-label">Eski Şifre</label>
                <input asp-for="EskiSifre" class="form-control" />
                <span asp-validation-for="EskiSifre" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="id"  value="@hasta!.KullaniciId" />

            <div class="form-group">
                <input type="submit" value="Ayarları Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
