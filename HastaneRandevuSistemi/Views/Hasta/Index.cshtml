@model IEnumerable<HastaneRandevuSistemi.Models.Hasta>

@{
    ViewData["Title"] = "Index";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kullanici.KullaniciId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kullanici.KullaniciAd)
            </th>
            <th></th>
        </tr>
