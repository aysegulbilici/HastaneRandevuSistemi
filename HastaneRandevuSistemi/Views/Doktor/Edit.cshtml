@model HastaneRandevuSistemi.Models.DoktorEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Doktor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BolumId">Bölüm:</label>
                <select asp-for="BolumId" class="form-control" required>
                    <option value="">Seçiniz</option>
                    @foreach (var bolum in ViewBag.Bolumler)
                    {
                        <option value="@bolum.BolumId">@bolum.BolumAdi</option>
                    }
                </select>
                <span asp-validation-for="BolumId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
