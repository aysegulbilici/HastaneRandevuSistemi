@model HastaneRandevuSistemi.Models.Admin

@{
	ViewBag.Title = "Admin Girişi";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
	<div class="card">
		<div class="card-header">
			<h2 class="text-center">Hasta Giriş</h2>
		</div>
		<div class="card-body">
			<form method="post" asp-controller="AdminPaneli" asp-action="Giris">
				<div class="form-group">
					<label asp-for="eposta" class="font-weight-bold">e-posta</label>
					<input asp-for="sifre" class="form-control" required>
					<span asp-validation-for="eposta" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="sifre" class="font-weight-bold">Şifre:</label>
					<input asp-for="sifre" type="password" class="form-control" required>
					<span asp-validation-for="sifre" class="text-danger"></span>
				</div>

				<button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
			</form>
		</div>
	</div>
</div>
