@model HastaneRandevuSistemi.Models.UyeModel


<style>
    body {
        background-color: rgb(238, 238, 228); /* Arkaplan rengi */
    }

    .container {
        margin-top: 50px;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #1F7373; /* Başlık arkaplan rengi */
        color: white;
        text-align: center;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-uyeol {
        background-color: #1F7373;
        color: white;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>Üye Ol</h2>
                </div>
                <!-- UyeOl.cshtml -->
                <!-- Üye Ol formu -->
                <div class="container mt-5">
                    <div class="row justify-content-center">
                        <div class="col-md-4">
                            <h2 style="color: #1F7373; font-weight: bold;" class="text-center mb-4">Üye Ol</h2>
                            <div class="button-container">
                                <form method="post" asp-controller="UyeOl" asp-action="UyeOl">
                                    <!-- UyeOl.cshtml -->
                                    <div class="container mt-5">
                                        <div class="row justify-content-center">
                                            <div class="col-md-4">
                                                <h2 style="color: #1F7373; font-weight: bold;" class="text-center mb-4">Üye Ol</h2>
                                                <div class="button-container">
                                                    <form method="post" asp-controller="UyeOl" asp-action="UyeOl">
                                                        <div class="form-group">
                                                            <label for="AdSoyad">Adı Soyadı</label>
                                                            <input type="text" class="form-control" id="AdSoyad" name="AdSoyad" placeholder="Adınız Soyadınız" required>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="TCKimlik">TC Kimlik Numarası</label>
                                                            <input type="text" class="form-control" id="TCKimlik" name="TCKimlik" placeholder="TC Kimlik Numaranız" required>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="Sifre">Şifre</label>
                                                            <input type="password" class="form-control" id="Sifre" name="Sifre" placeholder="Şifreniz" required>
                                                        </div>
                                                        <button type="submit" class="btn btn-outline-dark custom-button">Üye Ol</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-outline-dark custom-button">Üye Ol</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Bootstrap ve jQuery kütüphaneleri -->
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
